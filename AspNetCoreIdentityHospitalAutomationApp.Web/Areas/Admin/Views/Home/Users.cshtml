@model List<AppUser>

@{
    ViewData["Title"] = "Users";
    
}

<h3>Üyeler</h3>
<hr />

<table class="table table-bordered table-striped">
    <tr>
        <td>User Id</td>
        <td>User Name</td>
        <td>Email</td>
        <td>Roller</td>
        <td>Rol Atama</td>
        <td>Şifre Değiştirme</td>
    </tr>
    @if (Model.Count() == 0)
    {
        <tr>
            <td coldspan="3">Hiç bir üye yoktur.</td>
        </tr>
    }
    else
    {
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.UserName</td>
                <td>@item.Email</td>
                <td user-roles="@item.Id"></td>
                <td><a class="btn btn-success" asp-action="RoleAssign" asp-route-id="@item.Id">Rol Ata</a></td>
                <td><a class="btn btn-success" asp-action="ResetUserPassword" asp-route-id="@item.Id">Şifre Yenile</a></td>
            </tr>
        }
    }
</table>

